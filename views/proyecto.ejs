<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>InmobITT</title>
  <link href="https://www.tepic.tecnm.mx/images/itt.ico" rel="shortcut icon" />
  <link preload="main.css" href="http://localhost/CSS/main.css" as="style">
  <link href="http://localhost/CSS/main.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Arima:wght@100&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>

<body>
  <%- include('./partials/header.ejs') %>
  <div class="body h-auto">
    <div class="container-fluid">
      <div class="row flex-nowrap">
        <%- include('./partials/sidebar.ejs') %>
        <div class="col py-3">
          <div class="container h-auto w-100" style=" margin:0; ">
            <div class="row">
              <img class="rounded-4 col" src="https://www.casasparaconstruir.com/projetos/161/01.jpg" alt="perfil" style="max-width: 500px; height: 500px;">
              <div class="col">
                <form id="frmInmueble">
                  <div class="mb-3">
                    <label for="titulo" class="form-label">Titulo</label>
                    <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Introduzca el titulo del inmueble" required>
                  </div>
                  <div class="mb-3">
                    <label for="precio_venta" class="form-label">Precio Venta</label>
                    <input type="number" name="precio_venta" id="precio_venta" class="form-control" min="0" value="0" required>
                  </div>
                  <div class="mb-3">
                    <label for="precio_renta" class="form-label">Precio Renta</label>
                    <input type="number" name="precio_renta" id="precio_renta" class="form-control" min="0" value="0" required>
                  </div>
                  <div class="mb-3">
                    <label for="cuartos" class="form-label">Cuartos</label>
                    <input type="number" name="cuartos" id="cuartos" class="form-control" min="0" value="0" required>
                  </div>
                  <div class="mb-3">
                    <label for="pisos" class="form-label">Pisos</label>
                    <input type="number" name="pisos" id="pisos" class="form-control" min="0" value="0" required>
                  </div>
                  <div class="mb-3">
                    <label for="area" class="form-label">Area</label>
                    <input type="number" name="area" id="area" class="form-control" min="0" value="0" required>
                  </div>
                  <div class="mb-3">
                    <label for="direccion" class="form-label">Direcci√≥n</label>
                    <textarea name="direccion" id="direccion" rows="2" class="form-control" required></textarea>
                  </div>
                  <div class="mb-3">
                    <label for="codigoPostal" class="form-label">Asentamiento</label>
                    <select name="codigoPostal" id="codigoPostal" class="form-control">
                      <option value="" selected disabled hidden>Seleccione un asentamiento</option>
                      <% cps.forEach(cp =>{ %>
                      <option value="<%= cp.idcodigo_postal %>"><%= cp.asentamiento %></option>
                      <% }) %>
                    </select>
                  </div>
                  <button type="submit" class="btn btn-primary"><%= creado ? "Actualizar Datos" : "Registrar Inmueble" %></button>
                  <% if(creado){ %>
                  <button type="submit" class="btn btn-danger">Eliminar proyecto</button>
                  <% } %>
                </form>
              </div>
            </div>
            <% if(creado){ %>
            <div class="row">
              <div class="col container">
                <div class="row">
                  <form id="frmServicios">
                    <div class="mb-3">
                      <label for="servicio" class="form-label">Servicios</label>
                      <select name="servicio" id="servicio">
                        <option value="" selected disabled hidden>Seleccione un servicio</option>
                      </select>
                    </div>
                    <div class="btn-group" role="group">
                      <button type="button" class="btn btn-success" id="agServicio">Agregar Servicio</button>
                      <button type="button" class="btn btn-primary" id="regServicio">Registrar Servicio</button>
                    </div>
                  </form>
                </div>
                <div class="row">
                  <table class="table" id="tblServicios">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                      </tr>
                    </thead>
                    <tbody>
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="col container">
                <div class="row">
                  <form id="frmAdeudos">
                    <div class="mb-3">
                      <label for="adeudo" class="form-label">Adeudos</label>
                      <select name="adeudo" id="adeudo">
                        <option value="" selected disabled hidden>Seleccione un adeudo</option>
                      </select>
                    </div>
                    <div class="btn-group" role="group">
                      <button type="button" class="btn btn-success" id="agAdeudo">Agregar Adeudo</button>
                      <button type="button" class="btn btn-primary" id="regAdeudo">Registrar Adeudo</button>
                    </div>
                  </form>
                </div>
                <div class="row">
                  <table class="table" id="tblServicios">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Cantidad</th>
                      </tr>
                    </thead>
                    <tbody>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div> <!--   BARRA LATERAL IZQUIERDA   -->
</body>
<!-- Footer -->
<%- include('./partials/footer.ejs') %>
<script src="/js/inmueble.js"></script>

</html>